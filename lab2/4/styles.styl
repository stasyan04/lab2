$black = #000000
$dark-gray = #141414
$mid-gray = #222222
$light-gray = #636363
$white = #ffffff

*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font-family: Arial, sans-serif
  background-color: $black
  color: $white
  line-height: 1.6

header
  background-color: $dark-gray
  padding: 1.5rem 2rem
  border-bottom: 1px solid $mid-gray

.logo
  font-size: 1.8rem
  font-weight: bold
  color: $white

.container
  max-width: 1400px
  margin: 0 auto
  padding: 2rem
  display: grid
  grid-template-columns: 1fr 300px
  gap: 2rem

.main-content
  display: flex
  flex-direction: column
  gap: 2rem

.post
  display: grid
  grid-template-columns: 1fr 1fr
  background-color: $dark-gray
  border-radius: 12px
  overflow: hidden

  &.double-image
    grid-template-columns: 1fr

.post-image
  width: 100%
  height: 400px
  overflow: hidden

  img
    width: 100%
    height: 100%
    object-fit: cover
    display: block

.post-images
  display: grid
  grid-template-columns: 1fr 1fr
  gap: 1rem
  padding: 1rem

  .post-image
    height: 300px

.post-content
  padding: 3rem
  background-color: $dark-gray

  h2
    font-size: 2rem
    margin-bottom: 1rem
    color: $white

  p
    color: rgba($white, 0.9)
    font-size: 1.1rem
    line-height: 1.6

.post-meta
  color: $light-gray
  font-size: 0.9rem
  margin-bottom: 1.5rem

.sidebar
  display: flex
  flex-direction: column
  gap: 1.5rem

.sidebar-section
  background-color: $dark-gray
  padding: 1.5rem
  border-radius: 8px

  h3
    font-size: 1.2rem
    margin-bottom: 1rem
    color: $white

  p
    color: $light-gray

@media (max-width: 1200px)
  .container
    padding: 1.5rem

  .post-content
    padding: 2rem

  .post-image
    height: 350px

  .post-images .post-image
    height: 250px

@media (max-width: 992px)
  .container
    grid-template-columns: 1fr

  .post
    grid-template-columns: 1fr

  .post-image
    height: 400px

  .post-images
    grid-template-columns: 1fr 1fr

  .sidebar
    display: grid
    grid-template-columns: repeat(2, 1fr)
    gap: 1rem

@media (max-width: 768px)
  .post-image
    height: 300px

  .post-images
    padding: 0.5rem
    gap: 0.5rem

    .post-image
      height: 200px

  .post-content
    padding: 1.5rem

    h2
      font-size: 1.5rem

@media (max-width: 480px)
  .container
    padding: 1rem

  .post-image
    height: 250px

  .post-images
    grid-template-columns: 1fr

  .post-content
    padding: 1rem

    h2
      font-size: 1.3rem

  .sidebar
    grid-template-columns: 1fr